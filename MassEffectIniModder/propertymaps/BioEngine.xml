<properties>
  <Section name="Engine.GameEngine">
    <boolproperty propertyname="bSmoothFrameRate" friendlyname="Cap framerate" notes="Setting this to true makes the 'Max framerate' property enforced. Turning this off uncaps it.">TRUE</boolproperty>
    <floatproperty propertyname="MaxSmoothedFrameRate" friendlyname="Max framerate" notes="Maximum framerate cap. Setting this to above 62 may cause issues as the tick time between frames is used in some calculations">62</floatproperty>
    <!--<boolproperty propertyname="bForceStaticTerrain" friendlyname="Force static terrain" notes="Unknown at this time">False</boolproperty>-->
    <boolproperty propertyname="bDisablePhysXHardwareSupport" friendlyname="Disable PhysX on hardware" notes="Turning this on will make physics calculations run on the CPU. This only matters if you have an Nvidia graphics card">False</boolproperty>
    <!--
    <boolproperty propertyname="bEnableVSMShadows" friendlyname="Enable VSM shadows" notes="Toggle VSM (Variance Shadow Map) usage for projected shadows">False</boolproperty>

      <floatproperty propertyname="ModShadowFadeDistanceExponent" friendlyname="Shadow fading distance" notes="Set to 0 to show full shadows, set to 1 to disable all shadows. Values in-between will have shadows fade out">0.2</floatproperty>-->
  </Section>
  <Section name="WinDrv.WindowsClient">
    AudioDeviceClass=ISACTAudio.ISACTAudioDevice
    <boolproperty canautoreset="false" propertyname="StartupFullscreen" friendlyname="Fullscreen" notes="Setting this to false makes the application run in Windowed mode. There is no borderless windowed mode for Mass Effect">true</boolproperty>
    <boolproperty canautoreset="false" propertyname="UseVSYNC" friendlyname="Vsync" notes="Turns on or off VSync">FALSE</boolproperty>
    <intproperty canautoreset="false" propertyname="StartupResolutionX" friendlyname="Game Resolution X" notes="Width of the game resolution.">1024</intproperty>
    <intproperty canautoreset="false" propertyname="StartupResolutionY" friendlyname="Game Resolution Y" notes="Height of the game resolution.">768</intproperty>
  </Section>
  <Section name="SystemSettings">
    <boolproperty propertyname="StaticDecals" friendlyname="Show static decals" notes="Unknown at this time">TRUE</boolproperty>
    <boolproperty propertyname="DynamicDecals" friendlyname="Show dynamic decals" notes="Turn on or off temporary decals like bullet impacts. In almost all instances this should be left on">TRUE</boolproperty>
    <boolproperty propertyname="DynamicLights" friendlyname="Use dynamic lighting" notes="Lighting for dynamic objects. In almost all instances this should be left on">TRUE</boolproperty>
    <boolproperty propertyname="LightEnvironmentShadows" friendlyname="Use composite lighting" notes="Lighting from objects like stars. Turning this off has very little visual impact">TRUE</boolproperty>
    <boolproperty propertyname="DepthOfField" friendlyname="Depth of field" notes="Turn off to disable the sharpening or blurring of objects at different distances">TRUE</boolproperty>
    <boolproperty propertyname="QualityBloom" friendlyname="Quality bloom" notes="Turning this off uses a slightly faster bloom algorithm. Bloom cannot be turned off in Mass Effect">TRUE</boolproperty>
    <boolproperty propertyname="Trilinear" friendlyname="Trilinear filtering" notes="Increases texture clarity (only slightly)">TRUE</boolproperty>
  </Section>
  <Section name="D3DDrv.D3DRenderDevice">
    <intproperty propertyname="MaxTranslucencyLayers" friendlyname="Translucency layers" notes="Unknown at this time">2</intproperty>
    <boolproperty propertyname="DisableHWShadowMaps" friendlyname="Disable hardware shadow maps" notes="Unknown at this time">True</boolproperty>
  </Section>
  <Section name="Engine.RenderDevice">
    <boolproperty propertyname="bUsePostProcessEffects" friendlyname="Post processing" notes="Turning this off will remove film grain, vignette, and many other post processing effects">True</boolproperty>
  </Section>
</properties>